{
  "name": "exits-saas-api",
  "version": "1.0.0",
  "description": "Express.js REST API for ExITS-SaaS-Boilerplate with complete RBAC and multi-tenancy",
  "main": "src/index.js",
  "scripts": {
    "dev": "nodemon src/index.js",
    "start": "node src/index.js",
    "build": "echo 'API is JavaScript, no build needed'",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/ tests/",
    "lint:fix": "eslint src/ tests/ --fix",
    "migrate": "node src/scripts/migrate.js",
    "migrate:fresh": "node src/scripts/migrate-fresh.js",
    "seed": "node src/scripts/seed.js",
    "format": "prettier --write \"src/**/*.js\" \"tests/**/*.js\""
  },
  "keywords": [
    "express",
    "api",
    "rbac",
    "multi-tenant",
    "saas",
    "postgresql"
  ],
  "author": "Eduard",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "pg": "^8.10.0",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "helmet": "^7.0.0",
    "joi": "^17.10.2",
    "winston": "^3.11.0",
    "redis": "^4.6.11",
    "uuid": "^9.0.1",
    "express-async-errors": "^3.1.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "@types/node": "^20.9.0",
    "@types/express": "^4.17.21"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
